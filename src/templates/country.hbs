{{#each this}}
<section class="country">
    <h2 class="country__name">{{name}}</h2>
    <div class="country__info">
        <div class="country__flag">
            <img src="{{flag}}" alt="{{name}} flag" width="250" />
        </div>
        <ul>
            <li>
                <span class="country__title">Capital:</span>
                <span class="country__subtitle">{{capital}}</span>
            </li>
            <li>
                <span class="country__title">Population:</span>
                <span class="subtitle">{{population}}</span>
            </li>
            <li>
                <ul class="country__info--text">
                    <span class="country__title">Languages:</span>
                    {{#each languages}}
                    <li class="subtitle">{{name}}</li>
                    {{/each}}
                </ul>
            </li>
        </ul>
    </div>

</section>
{{/each}}